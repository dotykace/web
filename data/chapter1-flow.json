        { "type": "☝️ Ukazovák", "nextId": "finger-comparison" },
        { "type": "🖕 Prostředník", "nextId": "finger-comparison" },
        { "type": "💍 Prsteník", "nextId": "finger-comparison" },
        { "type": "🤙 Malík", "nextId": "finger-comparison" }
      ],
      "checkpoint": true
    },
    "finger-comparison": {
      "type": "chat-message-bot",
      "duration": 5000,
      "text": "Zajímavé. Porovnej tenhle prst s tím samým na druhé ruce - jsou stejné nebo jiné?",
      "nextId": "finger-click-question"
    },
    "finger-click-question": {
      "type": "chat-message-bot",
      "duration": 4000,
      "text": "A kterým prstem teď odklikneš tohle tlačítko?",
