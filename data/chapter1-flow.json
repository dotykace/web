    "chat-emoji-response": {
      "type": "multiple-choice",
      "duration": 30000,
      "text": "Odpoveď emoji:",
      "choices": [
        { "type": "😊", "nextId": "chat-voice-transition" },
        { "type": "😢", "nextId": "chat-voice-transition" },
        { "type": "😍", "nextId": "chat-voice-transition" },
        { "type": "🤔", "nextId": "chat-voice-transition" },
        { "type": "😴", "nextId": "chat-voice-transition" },
        { "type": "🤯", "nextId": "chat-voice-transition" }
