    "memory-expanding-dot": {
      "type": "expanding-dot",
      "duration": 5000,
      "text": "Pro mně je plné očekávání. Všelijakých očekávání.",
      "nextId": "memory-message-circle",
      "checkpoint": true
    },
    "memory-message-circle": {
      "type": "message-circle",
      "duration": 8000,
      "text": "přečte si tu zprávu včas? 😰\n\nodesláno, snad to vyjde... 😅\n\nsnad si tu mou zprávu nevyloží špatně... 😬\n\na máš to! 😊 co asi teď odpoví? 🤔",
      "nextId": "memory-center-dot"
    },
    "memory-center-dot": {
      "type": "center-dot-to-play",
      "duration": 6000,
      "text": "Kdyby mělo tohle místo jméno, tak za mě jídelna.\n\nNěkdy si říkám, jak ti asi všechno, co tu servírujou, chutná...",
      "nextId": "memory-social-storm"
    },
    "memory-social-storm": {
      "type": "social-media-storm",
      "duration": 6000,
      "text": "A jak to zvládáš všechno strávit...",
      "nextId": "memory-emoji-choice"
    },
    "memory-emoji-choice": {
      "type": "multiple-choice",
      "duration": 30000,
      "text": "Jak to všechno zvládáš?",
      "choices": [
        { "type": "❤️", "nextId": "memory-turn-instruction" },
        { "type": "💩", "nextId": "memory-turn-instruction" },
        { "type": "🤮", "nextId": "memory-turn-instruction" },
        { "type": "🧘", "nextId": "memory-turn-instruction" }
      ]
    },
    "memory-turn-instruction": {
      "type": "turn-instruction",
      "duration": 5000,
      "text": "Otoč mě zpátky.",
      "nextId": "memory-trace-intro"
    },
    "memory-trace-intro": {
      "type": "rotating-bubble",
      "duration": 8000,
      "text": "Tomuhle místu říkám stopa.",
      "nextId": "memory-scroll-1",
      "checkpoint": true
    },
    "memory-scroll-1": {
      "type": "scroll-line",
      "duration": 30000,
      "text": "Někdy tu z tebe vnímám hodně netrpělivosti, je to tak?",
      "nextId": "memory-scroll-2"
    },
    "memory-scroll-2": {
      "type": "scroll-line",
      "duration": 30000,
      "text": "někdy zvědavost",
      "nextId": "memory-scroll-3"
    },
    "memory-scroll-3": {
      "type": "scroll-line-timeout",
      "duration": 5000,
      "text": "ale vždycky zírám",
      "nextId": "memory-scroll-4",
      "timeoutId": "memory-scroll-4"
    },
    "memory-scroll-4": {
      "type": "scroll-line-timeout",
      "duration": 3000,
      "text": "kolik toho",
      "nextId": "memory-scroll-5",
      "timeoutId": "memory-scroll-5"
    },
    "memory-scroll-5": {
      "type": "scroll-line-timeout",
