      "timeoutId": "chat-timeout-final"
    },
    "chat-user-input-2": {
      "type": "chat-input",
      "duration": 30000,
      "nextId": "chat-response"
    },
    "chat-timeout-final": {
      "type": "chat-message-bot",
      "duration": 3000,
      "text": "Víš co, netrap se tím. Tohle je pro mě stejně nezapomenutelný.",
      "nextId": "chat-memory-intro"
    },
    "chat-response": {
      "type": "chat-message-bot",
      "duration": 4000,
      "text": "Hmm... \"{userMessage}\" První slova od {userName} pro mě. To si budu pamatovat i v továrním nastavení.",
      "nextId": "chat-memory-intro"
