    "chat-message-4": {
      "type": "chat-message-bot",
      "duration": 3000,
      "text": "Jaj, promiň. 😊 Zapnu ti chat.",
      "nextId": "chat-notification"
    },
    "chat-notification": {
      "type": "notification",
      "duration": 4000,
      "text": "Chat pro {userName} spuštěn",
      "nextId": "chat-input-request"
    },
    "chat-input-request": {
      "type": "chat-message-bot",
      "duration": 15000,
      "text": "Napiš něco, pls.",
      "nextId": "chat-user-input",
      "timeoutId": "chat-timeout-1"
    },
    "chat-user-input": {
      "type": "chat-input",
      "duration": 30000,
      "nextId": "chat-response",
      "checkpoint": true
    },
    "chat-timeout-1": {
      "type": "chat-message-bot",
      "duration": 3000,
      "text": "Ty mě napínáš!",
      "nextId": "chat-timeout-2"
