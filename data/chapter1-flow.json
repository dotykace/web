      "checkpoint": true
    },
    "chat-wow": {
      "type": "chat-message-bot",
      "duration": 2000,
      "text": "Wow!",
      "nextId": "chat-message-1"
    },
    "chat-message-1": {
      "type": "chat-message-bot",
      "duration": 3000,
      "text": "Teď už zprávy pro tebe jenom nezobrazuju.",
      "nextId": "chat-message-2"
    },
    "chat-message-2": {
      "type": "chat-message-bot",
      "duration": 3000,
      "text": "Už ti je i píšu! Yeeees!",
      "nextId": "chat-message-3"
